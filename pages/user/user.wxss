.home {
  width: 100%;
}

.userinfo {
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
  background-color: #e1effc;
}

.userinfo-head {
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  display: flex;
}

.userinfo-head-img {
  width: 78px;
  height: 78px;
}

.userinfo-head-img-content {
  border-radius: 100%;
  width: 100%;
  height: 100%;
  box-shadow: 1px 1px 1px #000;
}

.userinfo-head-text {
  flex: 1;
  line-height: 78px;
  margin-left: 20px;
  font-size: large;
  font-weight: bolder;
}

.userlist {
  box-sizing: border-box;
  margin-bottom: 5px;
  width: 100%;
  box-shadow: 1px 1px 0px 1px #bdbbbc;
  border-radius: 10px;
  background-color: #cbdbf3;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.userlist-box {
  box-sizing: border-box;
  width: 33%;
  height: 100px;
  border-radius: 10px;
  text-align: center;
}

.userlist-box-num {
  margin-top: 20px;
  font-size: 20px;
  font-weight: bolder;
}

.userlist-box-desc {
  font-size: 15px;
  color: #673AB7;
}

.userbtn{
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
}
button{
  background-color: #9575CD;
}
.token {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.token-text {
  margin: 10px;
  text-align: center;
  opacity: 0.8;
}

.token-btn {
  background-color: #9575CD;
  color: #fff;
  margin: 20px;
  font-weight: normal;
}
.hover-class{
  background-color: #673AB7;
}