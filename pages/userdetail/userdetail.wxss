/* pages/userdetail/userdetail.wxss */
.home{
  box-sizing: border-box;
  width: 100%;
}
.title{
  display: flex;
  box-sizing: border-box;
  width: 100%;
  justify-content: center;
  background-image: url('https://cdn.vuetifyjs.com/images/parallax/material.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  box-shadow: 0px 0px 20px inset rgba(0, 0, 0, 0.3);
}
.head{
  margin: 15px;
  box-sizing: border-box;
  width: 30%;
}
.head-img{
  width: 100%;
  box-shadow: 3px 3px 3px #000;
  border-radius: 100%;
}
.userdetail{
  box-sizing: border-box;
  padding: 20px;
}
.item{
  font-weight: bolder;
  font-size: large;
  margin-top: 20px;
  margin-bottom: 10px;
}
.username{
  border-bottom: 1px dashed #999;
}
.radio{
  display: flex;
  flex-direction: column;
  margin-bottom: 30px;
}
.btn{
  background-color: blue;
}
.hover-class{
  background-color: #1976d2;
}