/* pages/articlemanage/articlemanage.wxss */
.wxsearch {
  position: fixed;
  display: flex;
  align-items: center;
  width: 100%;
  height: 56px;
  background-color: #eee;
  top: 0;
  z-index: 3;
  box-sizing: border-box;
  padding: 10px;
}

.wxsearch-detail {
  display: flex;
  flex: 1;
  height: 36px;
  background-color: #fff;
  border-radius: 2px;
  padding-left: 5px;
  align-items: center;
}

.wxsearch-cancel {
  margin-left: 10px;
  margin-right: 5px;
}

.choose {
  margin: 5px 0px 5px 9px;
  padding: 3px 5px;
  background-color: #fff;
  color: #666;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.choose-icon {
  height: 15px;
  width: 15px;
}

.choose-img {
  width: 100%;
  height: 100%;
}

.filtrate {
  position: fixed;
  width: 100%;
  top: 56px;
  bottom: 0;
  height: 100%;
  z-index: 2;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 4;
  border-bottom: 1px solid #666;
}

.choose-item-top {
  position: absolute;
  top: 0;
  width: 100%;
  background-color: #000;
  opacity: 0.5;
  height: 50%;
  border-start-start-radius: 5px;
}

.choose-item-bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60%;
  background-color: #fff;
  border: 1px solid #999;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  box-sizing: border-box;
  padding: 20px;
}

.cs-title {
  text-align: center;
  font-size: 20px;
  font-weight: bolder;
  color: rgb(62, 62, 62);
}

.cs-all {
  width: 100%;
  box-sizing: border-box;
  margin-top: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cs-ck-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
  align-items: center;
}

.cs-ck {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.cs-ck-item {
  margin: 5px;
}
.cs-date {
  width: 100%;
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.cs-data-item{
  display: flex;
}

.cs-pk-item{
  width: 110px;
  text-align: center;
  border-bottom: 1px solid #999;
  color: green;
}
.cs-bt{
  background-color: blue;
  margin-top: 30px;
  color: #fff;
}
.hover-class{
  background-color: rgb(4, 4, 175);
}
.wxlist {
  margin-top: 56px;
}

.slideview {
  z-index: 1;
}

.wxlist-item {
  display: flex;
  justify-content: space-around;
}

.sort {
  width: 30px;
  height: 30px;
}

.sort-img {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.companyname {
  flex: 1;
  margin-left: 15px;
}

.foot {
  margin-top: 15px;
  margin-bottom: 15px;
  text-align: center;
  color: #999;
}