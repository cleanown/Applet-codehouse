/* pages/article/article.wxss */
.home {
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 44px;
}

.cp {
  box-sizing: border-box;
  margin: 15px;
  position: relative;
}

.cp-states {
  box-sizing: border-box;
  position: relative;
}

.cp-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.cpname {
  font-size: 25px;
  font-weight: bolder;
  margin-bottom: 10px;
}

.cpdetail {
  text-indent: 2em;
  padding: 5px;
}

.cpimg {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.cpimg-item {
  width: 30%;
  box-sizing: border-box;
  padding: 5px;
}

.cpimg-box {
  width: 100%;
  height: 100%;
}

.adress {
  margin-top: 10px;
}

.cplast {
  margin-right: 10px;
}

.cp-auth {
  text-align: right;
  margin-top: 10px;
}

.icon {
  position: fixed;
  width: 100%;
  height: 46px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
  padding-right: 10px;
  bottom: 0;
  background-color: #eee;
  z-index: 2;
}

.icons {
  margin-right: 10px;
}

.input {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 46px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 3;
  box-sizing: border-box;
  background-color: #B39DDB;
}

.input-down {
  width: 46px;
  height: 46px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-down-img {
  width: 50%;
  height: 50%;
}

.input-detail {
  flex: 1;
  height: 30px;
  background-color: #fff;
  margin-right: 10px;
  border-radius: 4px;
  padding: 3px;
}

.input-btn {
  margin-right: 10px;
  background-color: #311B92;
  color: #fff;
  box-shadow: 1px 1px 1px #000;
  font-weight: normal;
}



.comment {
  box-sizing: border-box;
}

.comment-title {
  box-sizing: border-box;
  border-top: 1px dashed #999;
  border-bottom: 1px dashed #999;
  padding: 8px;
  font-size: 20px;
}

.token {
  display: flex;
  justify-content: center;
  align-items: center;
}

.token-text {
  margin: 10px;
  text-align: center;
  opacity: 0.8;
}

.token-btn {
  background-color: blue;
  color: #fff;
  margin: 20px;
  font-weight: normal;
}

.comment-item {
  box-sizing: border-box;
  border-bottom: 1px solid #999;
  padding: 10px 20px;
}

.comment-items-user {
  display: flex;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 10px;
}

.comment-item-user-head {
  height: 40px;
  width: 40px;
}

.comment-item-user-head-img {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.comment-item-user-name {
  margin-left: 10px;
}

.comment-detail {
  text-indent: 1em;
}

.comment-last {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 10px;
}

.comment-last-set {
  display: flex;
}

.comment-last-set-reply {
  color: #311B92;
}

.comment-last-set-delete {
  text-indent: 1em;
  color: red;
}

.comment-last-time {
  font-size: 12px;
  color: #999;
}

.comment-none {
  margin: 10px;
  text-align: center;
  color: #999;
}

.userchange {
  position: fixed;
  right: 25px;
  height: 56px;
  bottom: 46px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.userchange-icon {
  margin-left: 10px;
}

.hover-class {
  background-color: rgb(4, 4, 175);
}