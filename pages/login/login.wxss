/* pages/login/login.wxss */
.title {
  width: 100%;
  height: 150px;
  line-height: 150px;
  text-align: center;
  font-size: 45px;
  font-weight: bold;
  color: blue;
}

.login {
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
}

.login-text {
  font-size: 20px;
  margin-bottom: 15px;
}

.login-Input {
  border-bottom: 1px solid #999;
  margin-bottom: 20px;
}
.loginBtn{
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
}
.loginBtn-btn{
  background-color: blue;
  color: #fff;
}
.hover-class{
  background-color: rgb(4, 4, 175);
}
.other{
  text-align: center;
  color: blue;
}