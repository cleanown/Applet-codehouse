/* pages/test/test.wxss */
.home{
  width: 100%;
  box-sizing: border-box;
}
.filtrate {
  position: fixed;
  width: 100%;
  top: 56px;
  bottom: 0;
  height: 100%;
  z-index: 2;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 4;
  border-bottom: 1px solid #666;
}

.choose-item-top {
  position: absolute;
  top: 0;
  width: 100%;
  background-color: #000;
  opacity: 0.5;
  height: 50%;
  border-start-start-radius: 5px;
}

.choose-item-bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 65%;
  background-color: #fff;
  border: 1px solid #999;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  box-sizing: border-box;
  padding: 20px;
  z-index: 5;
}

.cs-title {
  text-align: center;
  font-size: 20px;
  font-weight: bolder;
  color: rgb(62, 62, 62);
}

.cs-all {
  width: 100%;
  box-sizing: border-box;
  margin-top: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cs-ck-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
  align-items: center;
}

.cs-ck {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.cs-ck-item {
  margin: 5px;
}
.cs-date {
  width: 100%;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.cs-data-item{
  display: flex;
  width: 100%;
  margin-bottom: 20px;
}
.cd-data-title{
  width: 100px;
}
.cs-pk-item{
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #999;
  color: green;
}
.cs-bt{
  background-color: blue;
  margin-top: 10px;
  color: #fff;
}
.hover-class{
  background-color: rgb(4, 4, 175);
}