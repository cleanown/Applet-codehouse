<!--pages/test/test.wxml-->
<view class="home">
  <view class="test">
    <button bindtap="testClick">测试</button>
  </view>
</view>

<mp-actionSheet bindactiontap="btnClick" show="{{showActionsheet}}" title="1">
  <view class="filtrate">
	 	<view class="choose-item-top" bindtap="chooseClose"></view>
	 	<view class="choose-item-bottom">
			<view class="cs-title">筛选</view>
			<view class="cs-all">
				<switch bindchange="switchAll">全部</switch>
			</view>
			<checkbox-group class="cs-ck-group" style="color: {{allStyle}}" bindchange="bindbuttontap">
				<view class="cs-ck">
					<checkbox class="cs-ck-item" checked="{{checked}}" value="1" disabled="{{disabled}}">审核已通过</checkbox>
					<checkbox class="cs-ck-item" checked="{{checked}}" value="2" disabled="{{disabled}}">审核未通过</checkbox>
				</view>
				<view class="cs-ck">
					<checkbox class="cs-ck-item" checked="{{checked}}" value="3" disabled="{{disabled}}">文章已删除</checkbox>
					<checkbox class="cs-ck-item" checked="{{checked}}" value="4" disabled="{{disabled}}">文章未删除</checkbox>
				</view>
			</checkbox-group>
			<view class="cs-date" style="color: {{allStyle}}">
				<picker mode="date" value="{{oldDate}}" start="2015-09-01" end="{{nowDate}}" bindchange="bindDateChangeOld" disabled="{{disabled}}">
					<view class="cs-data-item">
						<view class="cd-data-title">开始日期: </view>
						<view class="cs-pk-item">{{oldDate}}</view>
					</view>
				</picker>
				<picker mode="date" value="{{newDate}}" start="2015-09-01" end="{{nowDate}}" bindchange="bindDateChangeNew" disabled="{{disabled}}">
					<view class="cs-data-item">
						<view class="cd-data-title">结束日期: </view>
						<view class="cs-pk-item">{{newDate}}</view>
					</view>
				</picker>
			</view>
			<button class="cs-bt" style="width: 100%;font-weight: normal;" hover-class="hover-class">确定</button>
	 	</view>
	</view>
</mp-actionSheet>