/* pages/register/register.wxss */
.title {
  width: 100%;
  height: 150px;
  line-height: 150px;
  text-align: center;
  font-size: 45px;
  font-weight: bold;
  color: blue;
}

.register {
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
}

.register-text {
  font-size: 20px;
  margin-bottom: 15px;
}

.register-Input {
  border-bottom: 1px solid #999;
  margin-bottom: 20px;
}
.registerBtn{
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
}
.registerBtn-btn{
  background-color: blue;
  color: #fff;
}
.hover-class{
  background-color: rgb(4, 4, 175);
}
.registerBtn-reset{
  margin-top: 20px;
  background-color: blue;
  color: #fff;
}